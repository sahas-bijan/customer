{
	"name": "customer-support-ticket-system",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "pnpm run build && vite preview",
		"deploy": "CLOUDFLARE_ENV=production pnpm run build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:list:local": "wrangler d1 migrations list DB --local",
		"db:list:remote": "wrangler d1 migrations list DB --remote --env production",
		"db:migrate:local": "wrangler d1 migrations apply DB --local",
		"db:migrate:remote": "wrangler d1 migrations apply DB --remote --env production",
		"db:delete:local": "rm -rf .wrangler/state/v3/d1"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.14",
		"drizzle-orm": "^0.44.6",
		"hono": "^4.10.1",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"tailwindcss": "^4.1.14",
		"wouter": "^3.7.1"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.13.13",
		"@eslint/js": "^9.33.0",
		"@libsql/client": "^0.15.15",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^5.0.0",
		"drizzle-kit": "^0.31.5",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"wrangler": "^4.43.0"
	}
}